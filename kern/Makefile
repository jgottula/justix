PREFIX:=/usr/lib/cross-i586-elf/i586-elf/bin

AS:=nasm
CC:=ccache i586-elf-gcc

LD     :=$(PREFIX)/ld
OBJCOPY:=$(PREFIX)/objcopy
OBJDUMP:=$(PREFIX)/objdump
NM     :=$(PREFIX)/nm


ASFLAGS:=-felf -MP -Ox -Wall
CPPFLAGS:=-std=gnu11 -Wall -x assembler-with-cpp -D__ASSEMBLY__
CFLAGS:=-std=gnu11 -O2 -ggdb -Wall -Wextra -ffreestanding -fno-omit-frame-pointer -nodefaultlibs -nostdlib -march=pentium-mmx -mtune=pentium-mmx
LDFLAGS:=-Tkern.ld


HEADERS:=$(shell find . -type f -name '*.h')
HEADERS_INC:=$(patsubst %.h,%.inc,$(HEADERS))

SOURCE_S:=$(shell find . -type f -name '*.s')
SOURCE_C:=$(shell find . -type f -name '*.c')
SOURCE_ALL:=$(SOURCE_S) $(SOURCE_C)

OBJ_S:=$(patsubst %.s,%.so,$(SOURCE_S))
OBJ_C:=$(patsubst %.c,%.co,$(SOURCE_C))
OBJ_ALL:=$(OBJ_S) $(OBJ_C)

CLEAN:=$(wildcard out/*) $(shell find src -type f \( -iname '*.dep' -or -iname '*.so' -or -iname '*.co' -or -iname '*.inc' -or -iname '*.lst' \) )


.PHONY: all clean kern

# default rule
all: kern

kern: out/kern.bin out/kern.elf out/kern.map out/kern.dump

clean:
	rm -rf $(CLEAN)


out/kern.dump: out/kern.elf Makefile
	$(OBJDUMP) -aCdfhlpS -M intel-mnemonic,i386 $< >$@

out/kern.map: out/kern.elf Makefile
	$(NM) -ACnS $< >$@

out/kern.bin: out/kern.elf kern.ld Makefile
	$(OBJCOPY) -S -O binary $< $@

out/kern.elf: $(OBJ_ALL) kern.ld Makefile
	$(LD) $(LDFLAGS) -o $@ $(OBJ_ALL)


$(OBJ_C): %.co: %.c Makefile
	$(CC) $(CFLAGS) -o $@ -Isrc/ -MP -MMD -MF $(<:%.c=%.dep) -c $<

$(OBJ_S): %.so: %.s $(HEADERS_INC) Makefile
	$(AS) $(ASFLAGS)  -o $@ -isrc/ -D$(subst src,jgsys_kern,$(subst /,_,$(<:.s=))) -l$(<:%.s=%.lst) -MD $(<:%.s=%.dep) $<

$(HEADERS_INC): %.inc: %.h Makefile
	$(CC) $(CPPFLAGS) -E -o $@ $<


# concatenate nasm/gcc's autogenerated dependencies
-include src/*/*.dep
